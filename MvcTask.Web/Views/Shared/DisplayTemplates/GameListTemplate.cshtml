@model IEnumerable<MvcTask.Web.Models.GameViewModel>

<table>
    <tr>
        <th>
            @(this.Html.DisplayNameFor(model => model.Key))
        </th>
        <th>
            @(this.Html.DisplayNameFor(model => model.Name))
        </th>
        <th>
            @(this.Html.DisplayNameFor(model => model.Description))
        </th>
        <th></th>
    </tr>

@foreach (var item in this.Model) {
    <tr>
        <td>
            @(this.Html.DisplayFor(modelItem => item.Key))
        </td>
        <td>
            @(this.Html.DisplayFor(modelItem => item.Name))
        </td>
        <td>
            @(this.Html.DisplayFor(modelItem => item.Description))
        </td>
        <td>
            @(this.Html.ActionLink("Edit", "Edit", new { id=item.Id })) |
            @(this.Html.ActionLink("Details", "Details", new { id=item.Id })) |
            @(this.Html.ActionLink("Delete", "Delete", new { id=item.Id }))
        </td>
    </tr>
}

</table>
