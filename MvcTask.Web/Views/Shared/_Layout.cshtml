<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(this.ViewBag.Title) - My Blog</title>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <meta name="description" content="The description of my blog" />
</head>
<body>
    <div class="body-content">
        <header>
            @(this.Html.Partial("_Header"))
        </header>

        <div class="right-sidebar" id="sidebar">
            @(this.RenderSection("Menu", false))
        </div>
        <div class="main-content">
            @(this.RenderBody())
        </div>
    </div>
    <footer>
        @(this.Html.Partial("_Footer"))
    </footer>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/float-menu.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</body>
</html>